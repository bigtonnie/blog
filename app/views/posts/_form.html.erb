<%= form_with model: @post do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div>
    <%= form.label :title%>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :Content%>
    <%= form.rich_text_area :content %>
  </div>
  <%= form.button class: 'btn'%>
<% end%>