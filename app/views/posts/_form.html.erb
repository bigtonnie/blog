<div class='grid place-items-center'>
  <%= form_with model: @post do |form| %>
    <% if form.object.errors.any? %>
      <div>
        <% form.object.errors.full_messages.each do |message| %>
          <div> <%= message %> </div>
        <% end %>
      </div>
    <% end %>
    <div class="pt-4 pb-4 flex gap-x-4">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class='pb-4'>
      <%= form.label :cover_image %>
      <% if @post.cover_image.present? %>
        <%= image_tag @post.cover_image, class: 'w-1/3'  %>
        <%= link_to "Remove Cover Image", post_cover_image_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      <% end %>
      <%= form.file_field :cover_image%>
    </div>
    <div>
      <%= form.label :content  %>
      <%= form.rich_text_area :content  %>
    </div>

  
    <div class='pt-4'>
      <%= form.label :published_at %>
      <%= form.datetime_select :published_at, include_blank: true %>
    </div>
    <div class='mt-3'>
      <%= form.button class: 'btn' %>
    </div>
  <% end %>
</div>